{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNEXT",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "composite": true,
    "removeComments": true,

    "strict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noImplicitReturns": true,
    // "noFallthroughCasesInSwitch": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
